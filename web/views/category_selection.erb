<% current_game.players.each do |player| %>
  <p><%= "#{player.name}: #{player.score} points" %></p>
<% end %>
<p>--------</p>

<p>Playing -> <%= current_player.name %></p>

<p>You rolled: <%= current_player.roll.inspect %></p>

<p>--------</p>
<p>Available categories:</p>
<form action="select_category" method="post">
  <% current_player.categories.each do |category| %>
    <p>
      <input type="radio" id="radiobutton_category_<%= category %>" name="category" value="<%= category %>">
      <label for="radiobutton_category_<%= category %>"><%= category %></label>
    </p>
  <% end %>
  <input type="submit" value="Select category">
</form>
